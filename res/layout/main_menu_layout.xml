<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:text="@string/title"
/>
</TableRow>

<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
<Button android:text="@string/play_single" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/PlaySingleButton"></Button>
</TableRow>

<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content">
<Button android:text="@string/play_multi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/PlayMultiButton"></Button>
</TableRow>

<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content" android:layout_height="wrap_content">
<Button android:text="@string/quit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/QuitButton"></Button>
</TableRow>

</TableLayout>
